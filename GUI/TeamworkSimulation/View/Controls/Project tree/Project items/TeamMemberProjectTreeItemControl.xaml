<UserControl
    x:Class="TeamworkSimulation.View.TeamMemberProjectTreeItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:TeamworkSimulation.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem
                    Command="{Binding ParentViewModel.RemoveTeamMember}"
                    CommandParameter="{Binding}"
                    Header="Remove">
                    <MenuItem.Icon>
                        <fa:ImageAwesome Icon="Remove" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Command="{Binding RenameOn}" Header="Rename">
                    <MenuItem.Icon>
                        <fa:ImageAwesome Icon="FileText" />
                    </MenuItem.Icon>
                </MenuItem>
            </ContextMenu>
        </Grid.ContextMenu>
        <local:ProjectTreeItemControl ItemIcon="Male" />
    </Grid>
</UserControl>

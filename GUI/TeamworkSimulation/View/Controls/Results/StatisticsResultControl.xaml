<UserControl
    x:Class="TeamworkSimulation.View.StatisticsResultControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TeamworkSimulation.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <ListView ItemsSource="{Binding StatisticsDataCollection}">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="120"
                        DisplayMemberBinding="{Binding Name}"
                        Header="Name" />
                    <GridViewColumn
                        Width="120"
                        DisplayMemberBinding="{Binding Mean}"
                        Header="Average" />
                    <GridViewColumn
                        Width="120"
                        DisplayMemberBinding="{Binding Median}"
                        Header="Median" />
                    <GridViewColumn
                        Width="120"
                        DisplayMemberBinding="{Binding Std}"
                        Header="Standard deviation" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>

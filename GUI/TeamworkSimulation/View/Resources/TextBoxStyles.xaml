<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wpft="http://schemas.xceed.com/wpf/xaml/toolkit">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/View/Resources/AppColors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="DefaultWatermarkTextBoxStyle" TargetType="{x:Type wpft:WatermarkTextBox}">
        <Setter Property="Background" Value="{StaticResource DarkShark}" />
        <Setter Property="BorderBrush" Value="{StaticResource Alto}" />
        <Setter Property="Foreground" Value="{StaticResource Alto}" />
        <Setter Property="FontSize" Value="10" />
    </Style>

</ResourceDictionary>